# Source file for colors
# vi: set ft=sh:

# Regular
RBLACK='\e[0;90m'     # Black
RRED='\e[0;91m'       # Red
RGREEN='\e[0;92m'     # Green
RYELLOW='\e[0;93m'    # Yellow
RBLUE='\e[0;94m'      # Blue
RPURPLE='\e[0;95m'    # Purple
RCYAN='\e[0;96m'      # Cyan
RWHITE='\e[0;97m'     # White

# Bold (light)
BBLACK='\e[1;90m'     # Black
BRED='\e[1;91m'       # Red
BGREEN='\e[1;92m'     # Green
BYELLOW='\e[1;93m'    # Yellow
BBLUE='\e[1;94m'      # Blue
BPURPLE='\e[1;95m'    # Purple
BCYAN='\e[1;96m'      # Cyan
BWHITE='\e[1;97m'     # White

# Italic (doesn't work in most terminals)
IBLACK='\e[3;90m'     # Black
IRED='\e[3;91m'       # Red
IGREEN='\e[3;92m'     # Green
IYELLOW='\e[3;93m'    # Yellow
IBLUE='\e[3;94m'      # Blue
IPURPLE='\e[3;95m'    # Purple
ICYAN='\e[3;96m'      # Cyan
IWHITE='\e[3;97m'     # White

# Underline
UBLACK='\e[4;90m'     # Black
URED='\e[4;91m'       # Red
UGREEN='\e[4;92m'     # Green
UYELLOW='\e[4;93m'    # Yellow
UBLUE='\e[4;94m'      # Blue
UPURPLE='\e[4;95m'    # Purple
UCYAN='\e[4;96m'      # Cyan
UWHITE='\e[4;97m'     # White

# Blinking AND Underline
BUBLACK='\e[5;4;90m'  # Black
BURED='\e[5;4;91m'    # Red
BUGREEN='\e[5;4;92m'  # Green
BUYELLOW='\e[5;4;93m' # Yellow
BUBLUE='\e[5;4;94m'   # Blue
BUPURPLE='\e[5;4;95m' # Purple
BUCYAN='\e[5;4;96m'   # Cyan
BUWHITE='\e[5;4;97m'  # White

# Background
BGBLACK='\e[40m'      # Black
BGRED='\e[41m'        # Red
BGGREEN='\e[42m'      # Green
BGYELLOW='\e[43m'     # Yellow
BGBLUE='\e[44m'       # Blue
BGPURPLE='\e[45m'     # Purple
BGCYAN='\e[46m'       # Cyan
BGWHITE='\e[47m'      # White

# Blinking
BLBLACK='\e[5;90m'    # Black
BLRED='\e[5;91m'      # Red
BLGREEN='\e[5;92m'    # Green
BLYELLOW='\e[5;93m'   # Yellow
BLBLUE='\e[5;94m'     # Blue
BLPURPLE='\e[5;95m'   # Purple
BLCYAN='\e[5;96m'     # Cyan
BLWHITE='\e[5;97m'    # White

# Reset Color
RESET='\e[0m'         # Reset color

