#!/usr/bin/env bash

# Quick and dirty install script. Very weak validations.
# For better control over what happens, install yadem:
# https://github.com/evanthegrayt/yadem

readonly INSTALL_PATH="$( cd $( dirname $0 )/../ && pwd -P )"
installed=()
not_installed=()

while getopts "th" opts; do
    case $opts in
        t)
            test="true"
            ;;
        h)
            echo "USAGE: ${0##*/} -[th]"
            exit
    esac
done

for file in $INSTALL_PATH/dotfiles/*; do
    if [[ $test == "true" ]]; then
        if [[ -L $HOME/.${file##*/} ]]; then
            installed+=(${file##*/})
            continue
        else
            not_installed+=(${file##*/})
            continue
        fi
        break
    fi
    if [[ -e $HOME/.${file##*/} ]]; then
        not_installed+=(${file##*/})
        continue
    fi
    ln -s $file $HOME/.${file##*/}
    installed+=(${file##*/})
done

echo '=============='
echo 'Installed:'
echo '--------------'
printf "%s\n" "${installed[@]}"
echo
echo '=============='
echo 'NOT Installed:'
echo '--------------'
printf "%s\n" "${not_installed[@]}"
